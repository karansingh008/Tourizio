<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book a Tour | Tourizio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .step-container {
            display: none;
        }

        .step-container.active {
            display: block;
        }
    </style>
</head>

<body>
    <%- include('partials/navbar') %>

        <section class="py-5 mt-5">
            <div class="container">
                <div class="text-center mb-5">
                    <h1 class="text-deep-red">Book Your Adventure</h1>
                    <p class="lead">Plan your perfect trip.</p>
                </div>

                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="booking-card p-4">

                            <!-- STEP 1: Details Form -->
                            <div id="step1" class="step-container active">
                                <form id="bookingForm" onsubmit="return false;">
                                    <h4 class="mb-4"><i class="fas fa-map-marked-alt text-saffron"></i> Trip Details
                                    </h4>
                                    <div class="row g-3 mb-4">
                                        <div class="col-md-12">
                                            <label class="form-label">Select Destination</label>
                                            <select class="form-select" id="destinationSelect" required>
                                                <option value="" data-price="0">Select Destination</option>
                                                <% destinations.forEach(dest=> { %>
                                                    <option value="<%= dest.name %>" data-price="<%= dest.price %>">
                                                        <%= dest.name %> (₹<%= dest.price %>/night)
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Check-in Date</label>
                                            <input type="date" class="form-control" id="checkinDate" required>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Check-out Date</label>
                                            <input type="date" class="form-control" id="checkoutDate" required>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Guests</label>
                                            <input type="number" class="form-control" id="guestsCount" min="1" value="1"
                                                required>
                                        </div>
                                        <div class="col-md-12" id="guestDetailsContainer"></div>
                                        <div class="col-md-6">
                                            <label class="form-label fw-bold">Estimated Cost</label>
                                            <input type="text" class="form-control bg-light fw-bold text-success"
                                                id="totalCost" value="₹0" readonly>
                                        </div>
                                    </div>
                                    <button class="btn btn-primary-custom w-100 btn-lg" onclick="showReview()">Review
                                        Details</button>
                                </form>
                            </div>

                            <!-- STEP 2: Review Section -->
                            <div id="step2" class="step-container">
                                <h4 class="mb-4"><i class="fas fa-list-check text-saffron"></i> Review Booking</h4>
                                <div class="card bg-light border-0 mb-4">
                                    <div class="card-body">
                                        <p><strong>Destination:</strong> <span id="reviewDest"></span></p>
                                        <p><strong>Dates:</strong> <span id="reviewDates"></span> (<span
                                                id="reviewNights"></span> Nights)</p>
                                        <p><strong>Guests:</strong> <span id="reviewGuests"></span></p>
                                        <div id="reviewGuestList" class="mb-2 text-start small text-muted"></div>
                                        <h3 class="text-success mt-3">Total: <span id="reviewTotal"></span></h3>
                                    </div>
                                </div>
                                <div class="d-flex gap-2">
                                    <button class="btn btn-outline-secondary w-50" onclick="editBooking()">Edit
                                        Details</button>
                                    <button class="btn btn-primary-custom w-50" onclick="showPayment()">Proceed to
                                        Payment</button>
                                </div>
                            </div>

                            <!-- STEP 3: Payment Section -->
                            <div id="step3" class="step-container">
                                <h4 class="mb-4"><i class="fas fa-credit-card text-saffron"></i> Payment Details</h4>
                                <form onsubmit="return submitFinalBooking(event)">
                                    <div class="mb-3">
                                        <label class="form-label">Card Number</label>
                                        <input type="text" class="form-control" id="cardNumber"
                                            placeholder="0000-0000-0000-0000" maxlength="19" required>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <label class="form-label">Expiry</label>
                                            <input type="text" class="form-control" id="cardExpiry" placeholder="MM/YY"
                                                maxlength="5" required>
                                            <div class="invalid-feedback">Month cannot be > 12 or 0.</div>
                                        </div>
                                        <div class="col-6">
                                            <label class="form-label">CVV</label>
                                            <input type="password" class="form-control" id="cardCvv" placeholder="123"
                                                maxlength="3" required>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-success w-100 btn-lg">Pay & Confirm
                                        Booking</button>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>

        <%- include('partials/footer') %>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
            <script src="/js/script.js"></script>
</body>

</html>