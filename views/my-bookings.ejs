<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Bookings | Tourizio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .booking-card {
            border: 2px solid #ff9800;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            overflow: hidden;
            background: white;
            color: #333;
        }

        .booking-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(255, 152, 0, 0.15);
        }

        .card-title {
            color: var(--deep-red, #D32F2F);
            font-weight: 800;
        }

        .booking-card .text-muted {
            color: #6c757d !important;
        }

        .text-saffron {
            color: var(--saffron, #FF9933) !important;
        }

        .timer-badge {
            background-color: #fff3cd;
            color: #856404;
            padding: 8px 16px;
            border-radius: 50px;
            font-size: 0.9em;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            border: 1px solid #ffeeba;
        }

        .timer-display {
            color: #856404;
        }

        /* Badges */
        .status-badge {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8em;
            font-weight: bold;
        }

        .status-badge.confirmed {
            background-color: #d1e7dd;
            color: #0f5132;
        }

        .status-badge.cancelled {
            background-color: #f8d7da;
            color: #842029;
        }

        .status-badge.completed {
            background-color: #cff4fc;
            color: #055160;
        }
    </style>
</head>

<body>
    <%- include('partials/navbar') %>

        <section class="py-5 mt-5">
            <div class="container">
                <h2 class="mb-4 text-deep-red"><i class="fas fa-suitcase-rolling"></i> My Trips</h2>

                <% if(bookings.length===0) { %>
                    <div class="text-center py-5">
                        <img src="https://cdni.iconscout.com/illustration/premium/thumb/empty-state-2130362-1800926.png"
                            alt="No bookings" style="max-height: 200px; opacity: 0.7;">
                        <h4 class="mt-3 text-muted">No bookings yet!</h4>
                        <a href="/destinations" class="btn btn-primary-custom mt-2">Explore Destinations</a>
                    </div>
                    <% } else { %>
                        <div class="row g-4">
                            <% bookings.forEach(booking=> { %>
                                <div class="col-md-6 col-lg-4">
                                    <div class="card booking-card h-100">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h5 class="card-title mb-0">
                                                    <%= booking.destination %>
                                                </h5>
                                                <% if(booking.status==='Confirmed' ) { %>
                                                    <span class="status-badge confirmed">Confirmed</span>
                                                    <% } else if(booking.status==='Cancelled' ) { %>
                                                        <span class="status-badge cancelled">Cancelled</span>
                                                        <% } else { %>
                                                            <span class="status-badge completed">
                                                                <%= booking.status %>
                                                            </span>
                                                            <% } %>
                                            </div>

                                            <div class="text-muted small mb-3">
                                                <i class="far fa-calendar-alt"></i>
                                                <%= new Date(booking.checkIn).toLocaleDateString() %> - <%= new
                                                        Date(booking.checkOut).toLocaleDateString() %>
                                            </div>

                                            <div class="d-flex justify-content-between mb-2">
                                                <span><i class="fas fa-users text-saffron"></i>
                                                    <%= booking.guestsCount %> Guests
                                                </span>
                                                <span class="fw-bold text-success">
                                                    <%= booking.totalCost %>
                                                </span>
                                            </div>

                                            <hr>

                                            <% if(booking.status==='Confirmed' ) { %>
                                                <div class="cancellation-section"
                                                    data-created="<%= new Date(booking.createdAt).getTime() %>"
                                                    data-id="<%= booking._id %>">
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <div class="timer-display small fw-bold">
                                                            <!-- Timer injected by JS -->
                                                        </div>
                                                        <button class="btn btn-sm btn-outline-danger fw-bold cancel-btn"
                                                            onclick="cancelBooking('<%= booking._id %>')">
                                                            Cancel Ticket
                                                        </button>
                                                    </div>
                                                </div>
                                                <% } else { %>
                                                    <div class="text-center small opacity-75 text-muted">
                                                        Booking is <%= booking.status.toLowerCase() %>.
                                                    </div>
                                                    <% } %>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                        <% } %>
            </div>
        </section>

        <%- include('partials/footer') %>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
            <script>
                // Timer Logic
                function updateTimers() {
                    const now = new Date().getTime();
                    document.querySelectorAll('.cancellation-section').forEach(el => {
                        const created = parseInt(el.getAttribute('data-created'));
                        const deadline = created + (24 * 60 * 60 * 1000); // 24 hours in ms
                        const diff = deadline - now;

                        const btn = el.querySelector('.cancel-btn');
                        const display = el.querySelector('.timer-display');

                        if (diff <= 0) {
                            if (btn) btn.remove();
                            display.textContent = "Cancellation Period Ended";
                            display.style.color = "#6c757d"; // Muted color
                        } else {
                            const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                            const seconds = Math.floor((diff % (1000 * 60)) / 1000);
                            display.innerHTML = `<i class="fas fa-stopwatch"></i> Cancel in: ${hours}h ${minutes}m ${seconds}s`;
                        }
                    });
                }

                setInterval(updateTimers, 1000);
                updateTimers(); //Run immediately

                async function cancelBooking(id) {
                    if (!confirm("Are you sure you want to cancel this booking? This action cannot be undone.")) return;

                    try {
                        const res = await fetch('/cancel-booking', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ bookingId: id })
                        });

                        if (res.ok) {
                            alert('Booking cancelled successfully.');
                            window.location.reload();
                        } else {
                            const msg = await res.text();
                            alert("Error: " + msg);
                        }
                    } catch (e) {
                        console.error(e);
                        alert("Failed to cancel booking.");
                    }
                }
            </script>
</body>

</html>