<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tourizio | Discover Incredible India</title>
    <!-- Use Bootstrap for specific components -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <%- include('partials/navbar') %>

        <!-- Hero Section -->
        <section class="hero-section">
            <div class="hero-content">
                <div class="container">
                    <div class="row align-items-center min-vh-100">
                        <div class="col-lg-6">
                            <h1 class="hero-title">Discover Incredible India</h1>
                            <p class="hero-subtitle">Experience the magic of India's diverse culture, heritage, and
                                landscapes.</p>
                            <div class="hero-buttons">
                                <a href="#destinations" class="btn btn-primary-custom btn-lg me-3">Explore
                                    Destinations</a>
                                <a href="/booking" class="btn btn-outline-light btn-lg">Book Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Featured Destinations -->
        <section id="destinations" class="featured-destinations py-5">
            <div class="container">
                <div class="text-center mb-5">
                    <h2 class="section-title">Featured Destinations</h2>
                    <p class="section-subtitle">Handpicked destinations across India</p>
                </div>
                <div class="row">
                    <% destinations.slice(0, 3).forEach(dest=> { %>
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="destination-card h-100">
                                <div class="destination-image"
                                    style="background-image: url('<%= dest.image %>'); height: 300px;">
                                    <div class="destination-overlay">
                                        <h3>
                                            <%= dest.name %>
                                        </h3>
                                        <p>Starting at â‚¹<%= dest.price %>
                                        </p>
                                        <a href="/booking" class="btn btn-sm btn-light mt-2 fw-bold"
                                            style="color: var(--deep-red)">Book Now</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                            <div class="col-12 text-center mt-4">
                                <a href="/destinations" class="btn btn-outline-dark rounded-pill px-4">View All
                                    Destinations</a>
                            </div>
                </div>
            </div>
        </section>

        <%- include('partials/footer') %>

            <!-- Scripts -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
            <script src="/js/script.js"></script>
</body>

</html>