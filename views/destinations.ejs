<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Destinations | Tourizio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include('partials/navbar') %>

        <section class="hero-section"
            style="min-height: 50vh; background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('https://images.unsplash.com/photo-1548013146-72479768bada?auto=format&fit=crop&w=1776&q=80'); display: flex; align-items: center;">
            <div class="container text-center text-white">
                <h1 class="display-3 fw-bold">Explore Incredible India</h1>
                <p class="lead">Discover the diverse beauty of India's most amazing destinations</p>
            </div>
        </section>

        <section class="py-5">
            <div class="container">
                <div class="row g-4">
                    <% destinations.forEach(dest=> { %>
                        <div class="col-lg-4 col-md-6">
                            <div class="destination-card">
                                <div class="destination-image" style="background-image: url('<%= dest.image %>')">
                                    <div class="destination-overlay">
                                        <h3>
                                            <%= dest.name %>
                                        </h3>
                                        <p><i class="fas fa-tag text-saffron"></i> â‚¹<%= dest.price %> / Night</p>
                                    </div>
                                </div>
                                <div class="p-4">
                                    <div class="d-flex justify-content-between mb-3">
                                        <span><i class="fas fa-clock text-primary-custom"></i> Flexible Dates</span>
                                        <span class="fw-bold text-success">Per Person</span>
                                    </div>
                                    <a href="/booking" class="btn btn-primary-custom w-100">Book Now</a>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>
        </section>

        <%- include('partials/footer') %>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
            <script src="/js/script.js"></script>
</body>

</html>